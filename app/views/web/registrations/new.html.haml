= simple_form_for User.new, url: registration_path, html: {class: 'form-horizontal'} do |f|
  - if @user.errors.any?
    .alert.alert-danger
      %a.close{"data-dismiss" => "alert"} ×
      = @user.errors.full_messages[0]
  .sec.sec-dark
    %h4
      Регистрация
    .form-group
      = f.label :name, class: 'col-sm-2 control-label'
      .col-sm-8
        = f.text_field :name, class: 'form-control', placeholder: 'Имя'
    .form-group
      = f.label :surname, class: 'col-sm-2 control-label'
      .col-sm-8
        = f.text_field :surname, class: 'form-control', placeholder: 'Фамилия'
    .form-group
      = f.label :email, class: 'col-sm-2 control-label'
      .col-sm-8
        = f.text_field :email, class: 'form-control', placeholder: 'Email'
    .form-group
      = f.label :password, class: 'col-sm-2 control-label'
      .col-sm-8
        = f.input_field :password, class: 'form-control', type: :password, placeholder: 'Пароль'
    .form-group
      .col-sm-offset-2.col-sm-8
        = f.submit "Войти", class: 'btn btn-default btn-block'