= simple_form_for @event, url: user_events_path, html: {class: 'form-horizontal'} do |f|
  - if @event.errors.any?
    .alert.alert-danger
      %a.close{"data-dismiss" => "alert"} ×
      = @event.errors.full_messages[0]
  .sec.sec-dark
    %div
      %h4 Создать событие
    .form-group
      = f.label :title, class: 'col-sm-2 control-label'
      .col-sm-8
        = f.text_field :title, class: 'form-control', placeholder: 'Название'
    .form-group
      = f.label :date, class: 'col-sm-2 control-label'
      .col-sm-8
        = f.date_select :date, class: 'form-control', placeholder: 'Дата'
    .form-group
      = f.label :reiteration, class: 'col-sm-2 control-label'
      .col-sm-8
        = f.select :reiteration, Event.reiterations.keys, include_blank: false
    .form-group
      .col-sm-8.col-sm-offset-2
        = f.input :private
    .form-group
      .col-sm-offset-2.col-sm-8
        = f.submit 'Создать', class: 'btn btn-default btn-block'