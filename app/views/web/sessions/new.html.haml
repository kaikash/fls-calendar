= simple_form_for @session, url: session_path, html: {class: 'form-horizontal'} do |f|
  - if @session.errors.any?
    .alert.alert-danger
      %a.close{"data-dismiss" => "alert"} ×
      = @session.errors.full_messages[0]
  .sec.sec-dark
    %div
      %h4 Вход
    .form-group
      = f.label :email, class: 'col-sm-2 control-label'
      .col-sm-8
        = f.text_field :email, class: 'form-control', placeholder: 'Email'
    .form-group
      = f.label :password, class: 'col-sm-2 control-label'
      .col-sm-8
        = f.input_field :password, class: 'form-control', type: :password, placeholder: 'Пароль'
    .form-group
      .col-sm-offset-2.col-sm-8
        = f.submit "Войти", class: 'btn btn-default btn-block'